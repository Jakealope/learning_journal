{% extends "base.jinja2" %}

{% block body %}

<div id="edit_detail">
  <article class="entry" id="{{entry.id}}">
    <h3>{{ entry.title }}</h3>
    <p class="dateline">{{ entry.created }}
    <div class="entry_body">
      {{ entry.text|markdown|safe }}
      </br>
      {% if request.authenticated_userid %}
      <button class="btn edit_post">Edit Post</button></br>
      {% endif %}
    </div>
  </article>
</div>

{% if request.authenticated_userid %}
<div id="edit_form">
<form action="" method="POST">
 <div>
   <label for="title">Title</label></br>
   <input type="text" size="30" name="title" id="title" value="{{ entry.title }}"/>
 </div>
 <div>
   <label for="text">Text</label></br>
   <textarea name="text" id="text" rows="10" cols="80">{{ entry.text }}</textarea>
 </div>
 <div>
   <input class="btn submit_edit" type="submit" value="Share" name="Share"/>
 </div>
